{
   "compilerOptions": {
      "target": "ES5",
      "strict": true,
      "alwaysStrict": true,
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "dist",
      "strictNullChecks": true,
      "newLine": "LF",
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "jsx": "react",
      "lib": ["dom", "es5", "scripthost", "es2015.promise", "es2015.collection"]
   },
   "include": [
      "src/**/*"
   ],
   "exclude": [
      "node_modules"
   ]
}
